<persistence xmlns="http://java.sun.com/xml/ns/persistence"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
         version="2.0">
<persistence-unit name="primary">
  <provider>org.hibernate.ejb.HibernatePersistence</provider>
<!--   <jta-data-source>java:jboss/datasources/JeeDS</jta-data-source> -->
  <properties>
     <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
     <property name="hibernate.connection.password" value="HESLO"/>
     <property name="hibernate.connection.url"  value="jdbc:mysql://localhost:3306/jee?characterEncoding=UTF-8"/>
     <property name="hibernate.connection.username" value="USER"/>
     <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
     <property name="hibernate.hbm2ddl.auto" value="create" />
     <property name="hibernate.show_sql" value="true" />
   </properties>
  </persistence-unit>
</persistence>