<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
   xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

   <persistence-unit name="jee">
<!--       <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source> -->
      <jta-data-source>java:/JeelabDS</jta-data-source>
      <class>jeelab.model.entity.Reservation</class>
      <class>jeelab.model.entity.BusinessHours</class>
      <class>jeelab.model.entity.FacilityType</class>
      <class>jeelab.model.entity.Role</class>
      <class>jeelab.model.entity.SportsCentre</class>
      <class>jeelab.model.entity.SportsCentreFacility</class>
      <class>jeelab.model.entity.User</class>
      <properties>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
   </persistence-unit>
</persistence>
